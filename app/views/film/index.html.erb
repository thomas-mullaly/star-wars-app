<article class="film-details">
    <section class="crawl">
        <header>
            <h1><%= @film.title %></h1>
        </header>
        <div class="centered-block">
            <%= simple_format(@film.opening_crawl) %>
        </div>
    </section>

    <section class="centered-block details">
        <header>
            <h2>Details</h2>
        </header>
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--5-col">
                <img class="film-cover" src="/assets/episode-<%= @film.episode_id %>.jpg" />
            </div>
            <div class="mdl-cell mdl-cell--5-col">
                <dl>
                    <dt>Director(s)</dt>
                    <dd><%= @film.director %></dd>
                    <dt>Producer(s)</dt>
                    <dd><%= @film.producer %></dd>
                    <dt>Release Date</dt>
                    <dd><%= @film.release_date %></dd>
                </dl>
            </div>
        </div>
    </section>
</article>
