<div class="mdl-grid films centered-block">
    <% @films.each do |film| %>
        <div class="mdl-cell mdl-card mdl-shadow--4dp film">
            <a href="/film/<%= film.episode_id %>">
                <img src="/assets/episode-<%= film.episode_id %>.jpg" />
            </a>
        </div>
    <% end %>
</div>
